<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생수 1.5L 6병 공동 구매"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_image"
                    app:layout_constraintTop_toTopOf="@+id/item_image" />

                <Button
                    android:id="@+id/join_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ff0000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="작성자 boy980705@g.skku.edu"
                    app:layout_constraintBottom_toTopOf="@+id/item_date"
                    app:layout_constraintStart_toEndOf="@+id/item_image"
                    app:layout_constraintTop_toBottomOf="@+id/item_title" />

                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감일 2022-12-31"
                    app:layout_constraintBottom_toTopOf="@+id/item_left"
                    app:layout_constraintStart_toStartOf="@+id/item_email"
                    app:layout_constraintTop_toBottomOf="@+id/item_email" />

                <TextView
                    android:id="@+id/item_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2명 남았어요!"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/item_date"
                    app:layout_constraintTop_toBottomOf="@+id/item_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>